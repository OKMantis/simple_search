<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
    <%= simple_form_for :search, url: root_path, method: "GET" do |f| %>
      <%= f.input :flavors, label: "Category", collection: $categories, as: :checkboxes %>
      <%= f.input :strengths, label: "Flavor", collection: $flavors, as: :checkboxes %>
      <%= f.submit "Search", class: "btn btn-primary" %>
      <%= link_to "Reset", root_path  %>
    <% end %>
      <h1>Cocktails</h1>
      <% @cocktails.each do |cocktail| %>
        <h3><%= cocktail.name %></h3>
        <p><%= cocktail.preparation %></p>
      <% end %>
    </div>
  </div>
</div>
